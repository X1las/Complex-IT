Description=Runs Complex-IT Frontend Server
After=network.target

[Service]
Type=simple
User=xilas
WorkingDirectory=/home/xilas/Complex-IT/react-frontend
ExecStart=/opt/autostart.sh
Restart=always
RestartSec=10
Environment=PATH=/usr/local/bin:/usr/bin:/bin
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
